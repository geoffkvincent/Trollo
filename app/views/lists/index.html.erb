<h1><%= @board.name %></h1>
<hr />
<h3>Click a List To View Tasks</h3>
<hr />
<%= link_to 'Boards', boards_path %> |
<%= link_to 'Create a New List', new_board_list_path(@board) %>
<hr />

 <% @lists.each do |list| %>
  <div class="ui cards">
  <div class="card">
    <div class="content">
      <div class="header">
        <%= link_to list.name, [@board, list] %>
      </div>
      <div class="extra content">
        <div class="ui two buttons">
          <div class="ui basic green button"><%= link_to 'Edit', edit_board_list_path(@board, list) %></div>
          <div class="ui basic red button"><%= link_to 'Delete', [@board, list], method: :delete %></div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>


